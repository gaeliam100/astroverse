---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

const { title, description,keywords } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} keywords={keywords}/>
  </head>
  <body
    class="flex flex-col min-h-screen mx-auto max-w-full dark:prose-invert  dark:bg-neutral-900"
  >
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    <script type="text/javascript" src="https://api.clientify.net/web-marketing/chatbots/script/205399.js"></script>
  </body>
</html>